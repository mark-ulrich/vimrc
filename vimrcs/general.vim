source ~/.vim/vimrcs/cscope_maps.vim

" Tabs
set shiftwidth=2
set softtabstop=2
set expandtab

" Line numbers
set number
set relativenumber

" Syntax highlight
syntax on

" Word wrap
set wrap!

" Auto indent
set smartindent

" Show commands
set showcmd

" Mouse
set mouse=a

" Timeout
set timeoutlen=500
set ttimeoutlen=10

" Scrolling
set scrolloff=10

" Smart case
set ignorecase
set smartcase
